{
  "name": "movie-list-server",
  "version": "1.3.0",
  "main": "./src/app.ts",
  "scripts": {
    "dev": "kill -9 $(lsof -i :4100) &>/dev/null | exit 0 nodemon app.js",
    "start": "ts-node-esm ./src/app.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "[ -d '.husky' ] && (husky install && shx rm -rf .git/hooks && shx ln -s ../.husky .git/hooks) || true",
    "prettier": "prettier '**/*.{js,jsx,ts,tsx}' --write",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src --color"
  },
  "author": "Paras Mani Jain",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.4.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.+(json|css|md)": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "none"
  }
}
